<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd = "http://www.w3.org/2001/XMLSchema">
    <xsd:complexType name="TDataBase">
        <xsd:sequence>
        <xsd:element name="GasTypeList" type="TGasTypeList" />
        <xsd:element name="ServicesList" type="TServicesList" />
        </xsd:sequence>
    </xsd:complexType>
    <xsd:complexType name="TGasTypeList">
        <xsd:sequence maxOccurs="unbounded">
            <xsd:element name="GasType" type="TGasType" />
        </xsd:sequence>
    </xsd:complexType>
    <xsd:complexType name="TServicesList">
        <xsd:sequence maxOccurs="unbounded">
            <xsd:element name="Service" type="TService" />
        </xsd:sequence>
    </xsd:complexType>
    <xsd:complexType name="TGasType">
        <xsd:attribute name="name" type="xsd:string" />
        <xsd:attribute name="price" type="Sum" />
        <xsd:attribute name="ID" type="int" />
    </xsd:complexType>
    <xsd:complexType name="TService">
        <xsd:attribute name="name" type="xsd:string" />
        <xsd:attribute name="price" type="Sum" />
        <xsd:attribute name="ID" type="int" />
    </xsd:complexType>
    <xsd:simpleType name="Sum">
        <xsd:restriction base="xsd:string">
            <xsd:pattern value="[0-9].[0-9]{2}" />
        </xsd:restriction>
    </xsd:simpleType>
    <xsd:simpleType name="listOfInt">
        <xsd:restriction>
            <xsd:simpleType>
                <xsd:list itemType="xsd:int" />
            </xsd:simpleType>
            <xsd:maxLength value="unbounded" />
        </xsd:restriction>
    </xsd:simpleType>
</xsd:schema>